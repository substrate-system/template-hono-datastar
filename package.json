    "esbuild": "^0.27.2",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "lightningcss": "^1.30.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^39.0.1",
    "tap-spec": "^5.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wrangler": "^4.56.0"
